<% provide(:title, "Courses") %>

<h1><%= Course.count %> courses available !</h1>

<% @courses.in_groups_of(3, false).each do |group| %>
  <div class="row">
    <% group.each do |course| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag course.image.url(:medium), alt: course.title %>
        <div class="caption">
          <h3><%= course.title %></h3>
          <p><%= truncate(course.description, length:100) %></p>
          <p><%= link_to "Take this course", course_path(course.slug), class: "btn btn-primary", role: "button" %></p>
        </div>
      </div>
    </div>
  <% end %>
  </div>
<% end %>
